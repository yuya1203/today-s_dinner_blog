<% @page_title = "会員名簿" %>
<h1><%= @page_title %></h1>

<%= form_tag :search_members, method: :get, class: "search" do %>
    <%= text_field_tag "q", params[:q] %>
    <%= submit_tag "検索" %>
<% end %>

<% if @members.present? %>
    <table class="list">
        <thead>
            <tr>
                <th>背番号</th>
                <th>ユーザー名</th>
                <th>氏名</th>
            </tr>
        </thead>
        <tbody>
            <% @members.each do |member| %>
                <tr>
                    <td style="text-align: right"><%= member.number %></td>
                    <td><%= link_to member.name, member %></td>
                    <td><%= member.full_name %></td>
                    
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= paginate @members %>
<% else %>
     <p>会員情報がありません。</p>
<% end %>